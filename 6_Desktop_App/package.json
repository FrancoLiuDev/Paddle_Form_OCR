{
  "name": "paddle-ocr-desktop",
  "version": "1.0.0",
  "description": "Paddle OCR Desktop Application with Python backend",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "type-check": "vue-tsc --noEmit"
  },
  "keywords": [
    "electron",
    "vue",
    "typescript",
    "python",
    "ocr",
    "paddleocr"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "^0.5.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vue": "^3.4.0",
    "vue-tsc": "^1.8.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "pinia": "^2.1.0",
    "vue-router": "^4.2.0"
  },
  "build": {
    "appId": "com.paddle.ocr.desktop",
    "productName": "Paddle OCR",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "backend/**/*"
    ],
    "extraResources": [
      {
        "from": "../4_OCR_Recognition",
        "to": "ocr_backend",
        "filter": ["**/*", "!**/__pycache__", "!**/result/*"]
      },
      {
        "from": "../5_Text_Extraction",
        "to": "text_extraction",
        "filter": ["**/*", "!**/__pycache__", "!**/result/*"]
      }
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "mac": {
      "target": ["dmg", "zip"]
    }
  }
}
